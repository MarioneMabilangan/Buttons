<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableLayout">

    <TableLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TableRow android:layout_height="200dp"
            android:layout_marginTop="100dp">
            <TextView android:text="Marione"
                android:layout_marginLeft="70dp"/>

        </TableRow>

        <TableRow
            android:layout_width="488dp"
            android:layout_height="243dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:src="@drawable/_50" />
        </TableRow>

        <TableRow android:layout_height="50dp">
            <Button
                android:id="@+id/button_id"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:text="f"
                android:layout_marginLeft="70dp"/>

        </TableRow>

        <TableRow android:layout_height="50dp">
        <ImageButton
            android:id="@+id/flecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Grid"
            android:contentDescription="icono_flecha"
            android:padding="16dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/arrow_right_512"
            style="?android:attr/borderlessButtonStyle" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>